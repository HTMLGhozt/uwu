generator photon {
  provider = "photonjs"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

model Token {
  id        String   @default(uuid()) @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // TODO: Figure out if this should just be implemented via deletes:
  used      Boolean  @default(false)
  reason    String?
}

model User {
  id        String   @default(uuid()) @id
  createdAt DateTime @default(now())
  twitchID  String   @unique
  name      String?
  email     String?
  tokens     Token[]
}
